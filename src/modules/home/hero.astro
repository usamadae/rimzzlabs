---
import { BackgroundBeams } from '@/components/ui/background-beams';
import { Twitter, Gamepad2 } from 'lucide-astro';
import { Link } from '@/components/ui/link';
---

<section class='h-screen bg-neutral-950 relative flex items-center justify-center'>
  <div class='w-11/12 max-w-3xl mx-auto relative z-10 text-center'>
    <h1
      class='text-6xl pb-2 md:pb-4 lg:text-8xl 2xl:text-9xl font-bold text-transparent bg-clip-text bg-gradient-to-b from-purple-800 to-purple-500'
    >
      <span class='sr-only'>Voidel -</span> Voidel<span class='sr-only'>.com</span>
    </h1>

    <p class='font-medium text-balance text-neutral-500 pb-4'>
      Voidel Voidel Voidel Voidel Voidel Voidel Voidel Voidel Voidel
    </p>

    <div class='flex items-center justify-center gap-2'>
      <Link
        variant='secondary'
        target='_blank'
        rel='noopener noreferrer'
        href='https://www.roblox.com/games/7534035522/Tower-World-Alpha'
        title="Play Tower World"
        className='group max-md:order-2'
      >
        <Gamepad2 size='1rem' class='mr-1.5 shrink-0' />
        Play
      </Link>

      <Link href='/blog' title="Rizki's Writings" variant='ghost' className='group'>
        <Twitter size='0.975rem' class='mr-1.5 shrink-0' />
        Follow Us
      </Link>
    </div>
  </div>

  <BackgroundBeams client:idle />
</section>
